

<h1> Listing articles </h1>

<%= link_to 'New article', new_article_path %>

<table class="table">
  <tr>
    <th> Title </th> 
    <th> Text </th>
    <th> Author </th>
    <th colspan="3">  Actions </th>
  </tr>

  <% @articles.each do |a| %>
  <tr>
  <td> <%= a.title %> </td> 
  <td> <%= a.text %> </td> 
  <td> <%= a.author %> </td> 
  <td> <%= link_to "Show", article_path(a) %> </td>
  <td> <%= link_to "Edit", edit_article_path(a) %></td> 
  <td> <%= link_to "Destroy", article_path(a), method: :delete, data: {confirm: "Are you sure?"} %></td> 
    </tr>
  <% end %>
</table>


