<div class="media">
    <a class="pull-left" href="#">
        <img class="media-object" src="http://placehold.it/64x64" alt="">
    </a>
    <div class="media-body">
        <h4 class="media-heading"><%= comment.commenter %>
            <small><%= comment.created_at %></small>
        </h4>
        <%= comment.body %>
    </div>
      <% if author_signed_in? %>
    	<%= link_to "Destroy", [comment.article, comment], method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-large btn-primary" %>
      <% end %>
</div>

